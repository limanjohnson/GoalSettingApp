<div class="container border rounded p-3 w-100">
    <h2>@Title</h2>
    @if (Items == null || !Items.Any())
    {
        <p>@EmptyMessage</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                @foreach (var header in Headers)
                {
                    <th>@header</th>
                }
            </tr>
            </thead>

            <tbody>
            @foreach (var item in Items)
            {
                @RowTemplate(item)
            }
            </tbody>
        </table>
    }
</div>

@code {

    [Parameter] public string Title { get; set; } = "Table";
    [Parameter] public string EmptyMessage { get; set; } = "No items found";

    // List of Item
    [Parameter] public required IEnumerable<Goal> Items { get; set; }
    
    // Column Headers
    [Parameter] public required List<String> Headers { get; set; }
    
    [Parameter] public required RenderFragment<Goal> RowTemplate { get; set; }

}